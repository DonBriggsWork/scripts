#!/bin/bash
#
#####################################################################
# bt-restart                   ##         Initial Rev: 01-jan-2022  #
# By: Don! Briggs <DonBriggsWork@gmail.com>                         #                  
#####################################################################
#
# Resrart blootooth services via 'systemctl'. Sometimes useful for 
# resolving bluetopth issues that Linux is plagued with.
#####################################################################

printf "\nRestarting Bluetooth Services\n"
sudo systemctl restart bluetooth.target
sudo systemctl restart bluetooth.service
printf "  -Done\n"